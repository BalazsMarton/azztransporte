<section class="jumptarget" id="kontakt">
	<div class="kontakt-wrap">
		<div class="container">
			<div class="title-row text-center">
				<h1>KONTAKT</h1>
				<p>Für Anfragen und Offertanfragen füllen Sie bitte das untenstehende Kontaktformular aus:</p>
			</div>
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
					<%= form_for Message.new, html: { remote: true }, url: contact_path do |message_form| %>
					<div class="row">

						<div class="form-group">
							<%= message_form.text_field :name, placeholder: "Name", class: "form-control" %>
						</div>

						<div class="form-group">
							<%= message_form.email_field :email, placeholder: "Email", class: "form-control" %>
						</div>

						<div class="form-group">
							<%= message_form.text_area :content, placeholder: "Bitte beschreiben Sie Ihr Projekt möglichst genau! Anzahl Zimmer, Fläche, Stockwerk, usw. Je genauer die Infos, desto genauer die Offerte.", class: "form-control",rows: "5" %>
						</div>
					</div>

					<div class="row text-center">
						<div class="field col-sm-12">
							<%= message_form.submit "Senden", class: "btn btn-default btn-lg" %>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>