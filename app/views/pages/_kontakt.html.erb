<section class="jumptarget" id="kontakt">
	<div class="kontakt-wrap">
		<div class="container">
			<div class="title-row text-center">
				<h1>KONTAKT</h1>
				<p>Nunc vel tortor accumsan, imperdiet nibh in, venenatis dolor. Sed vitae lorem non dolor iaculis suscipit. Donec leo libero, venenatis et justo facilisis.</p>
			</div>
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
					<%= form_for Message.new, html: { remote: true }, url: contact_path do |message_form| %>
					<div class="row">

						<div class="form-group">
							<%= message_form.text_field :name, placeholder: "Név", class: "form-control" %>
						</div>

						<div class="form-group">
							<%= message_form.email_field :email, placeholder: "Email", class: "form-control" %>
						</div>

						<div class="form-group">
							<%= message_form.text_area :content, placeholder: "Üzenet", class: "form-control" %>
						</div>
					</div>

					<div class="row text-center">
						<div class="field col-sm-12">
						<%= message_form.submit "Senden", class: "btn btn-default btn-lg" %>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>